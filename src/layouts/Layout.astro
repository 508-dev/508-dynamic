---
import Header from '../components/Header.astro';
interface Props {
	  title: string;
	  'data-theme'?: string;
}

const { title, 'data-theme': dataTheme } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme={dataTheme}>
	  <head>
		    <meta charset="UTF-8" />
		    <meta name="description" content="Engineering co-op connecting qualified offshore engineers with companies that match their expertise." />
		    <meta name="viewport" content="width=device-width" />
		    <meta name="generator" content={Astro.generator} />
        <meta property="og:title" content="508.dev">
        <meta property="og:description" content="Engineering co-op connecting qualified offshore engineers with companies that match their expertise.">
        <meta property="og:url" content="https://508.dev/508logo.png">
        <meta property="og:image" content="https://508.dev/rock.jpg" />
        <meta name="twitter:card" content="summary">
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
        <link rel="manifest" href="/site.webmanifest">
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
        <meta name="msapplication-TileColor" content="#da532c">
        <meta name="theme-color" content="#ffffff">
		    <title>{title}</title>
	  </head>
	  <body>
      <Header />
		<slot />
	</body>
  <script is:inline data-goatcounter="https://508.goatcounter.com/count"
          async src="//gc.zgo.at/count.js"></script>
</html>
<style is:global>
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
