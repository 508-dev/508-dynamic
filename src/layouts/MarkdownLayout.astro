---
import Header from '../components/Header.astro';
interface Props {
	  title: string;
}

// @ts-ignore
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
	  <head>
		    <meta charset="UTF-8" />
                    <meta name="description" content={frontmatter.headingSummary} />
		    <meta name="viewport" content="width=device-width" />
		    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		    <meta name="generator" content={Astro.generator} />
		    <title>{frontmatter.title}</title>
	  </head>
	  <body>
        <Header />
        <div class="relative bg-white">
            <div class="mx-auto max-w-7xl lg:flex lg:justify-between lg:px-8 xl:justify-end">
                <div class="lg:flex lg:w-1/2 lg:shrink lg:grow-0 xl:absolute xl:inset-y-0 xl:right-1/2 xl:w-1/2">
                    <div class="relative h-80 lg:-ml-8 lg:h-auto lg:w-full lg:grow xl:ml-0">
                        <img class="absolute inset-0 h-full w-full bg-gray-50 object-cover" src="office.jpg" alt="">
                    </div>
                </div>
                <div class="px-6 lg:contents">
                    <div class="mx-auto max-w-2xl pb-24 pt-16 sm:pb-32 sm:pt-20 lg:ml-8 lg:mr-0 lg:w-full lg:max-w-lg lg:flex-none lg:pt-32 xl:w-1/2">
                        <p class="text-base font-semibold leading-7 text-indigo-600">{frontmatter.headingSmall}</p>
                        <h1 class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{frontmatter.heading}</h1>
                        <p class="mt-6 text-xl leading-8 text-gray-700">{frontmatter.headingSummary}</p>
                        <div class="mt-10 max-w-xl text-base leading-7 text-gray-700 lg:max-w-none prose prose-xl prose-stone">
                            <slot />
                        </div>
                        <div class="mt-10 flex">
                            <a href="/members" class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Members</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	  </body>
</html>
<style is:global>
 code {
		 font-family:
			   Menlo,
			   Monaco,
			   Lucida Console,
			   Liberation Mono,
			   DejaVu Sans Mono,
			   Bitstream Vera Sans Mono,
			   Courier New,
			   monospace;
 }
</style>
