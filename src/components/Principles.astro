---
const { fields } = Astro.props;
const principles = [1,2,3,4];
---
<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">{fields['principles_title'].content}</h2>
      <p class="mt-6 text-lg leading-8 text-gray-600">{fields['principles_text'].content}</p>
    </div>
    <dl class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 text-base leading-7 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3">
        {principles.map((num)=>{
        return (
        <div>
            <dt class="font-semibold text-gray-900">{fields[`principles_${num}_title`].content}</dt>
            <dd class="mt-1 text-gray-600">{fields[`principles_${num}_text`].content}</dd>
        </div>
        )
        })}
    </dl>
  </div>
</div>
