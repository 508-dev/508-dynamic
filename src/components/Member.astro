---
export interface MemberType {
	id: string;
	name: string;
	description?: string | null;
  skills: string[];
  type: string;
  publicPhotoId?: string;
  publicPhotoName?: string;
  publicDescription?: string;
  publicLink?: string;
  cPublicJobTitle?: string;
}
interface Props extends MemberType {

}

const {
  id,
  name,
  skills,
  publicPhotoId,
  publicDescription,
  publicLink,
  publicPhotoName,
  cPublicJobTitle,
} = Astro.props;


---

<li
  class="flex flex-col gap-6 xl:flex-row member"
  data-member-skills={skills.join(' ')}
  id={id}
>
  {publicPhotoId &&
    <a href={publicLink} class="flex-shrink-0 block">
      <img class="w-52 h-[260px] flex-none rounded-2xl object-cover" src={publicPhotoName} alt={name}>
    </a>
  }
  {!publicPhotoId &&
    <a href={publicLink} class="flex-shrink-0 block">
      <img class="w-52 h-[260px] flex-none rounded-2xl object-cover" src="/anon.webp" alt={name}>
    </a>
  }
    <div class="flex-auto">
      {publicLink &&
      <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">
		    <a href={publicLink}>{name}</a>
      </h3>
      }
      {!publicLink &&
      <h3 class="text-lg font-semibold leading-8 tracking-tight text-gray-900">
		    {name}
      </h3>
      }
      <p class="text-base leading-7 text-gray-600">{cPublicJobTitle}</p>
      <p class="mt-6 text-base leading-7 text-gray-600">{publicDescription}</p>
		  <ul class="flex flex-wrap mt-2">
			    {skills?.map((skill: string)=> {
			    return (
			  <li class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10 mb-1 mr-1">{skill}</li>
			    )
			    })}
		  </ul>

    </div>

</li>
