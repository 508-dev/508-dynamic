---
const routes = [
  {
    name: 'Home',
    route: '/',
  },
  {
    name: 'Pricing',
    route: '/pricing',
  },
  {
      name: 'Portfolio',
      route: '/portfolio',
  },
  {
    name: 'Members',
    route: '/members',
  },
  {
      name: 'Join',
      route: '/join',
  },

];

// Get current pathname
const currentPath = Astro.url.pathname;

// Helper function to check if a route is active
function isActive(route: string): boolean {
  if (route === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(route);
}
---
<header class="inset-x-0 top-0 z-50">
  <script>
   function toggleSidebar() {
     [...document.getElementsByClassName("toggleable")].forEach((el)=>(el.classList.toggle('hidden')));
   }
   [...document.getElementsByTagName("button")].forEach((el)=>(el.addEventListener("click", toggleSidebar)));
  </script>
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="#" class="-m-1.5 p-1.5">
          <span class="sr-only">508.dev</span>
          <img class="h-8 w-auto" src="508logo.png" alt="508 logo">
        </a>
      </div>
      <div class="flex lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:gap-x-12">
        {routes.map((route)=>{
        const active = isActive(route.route);
        return (
        <a 
          href={route.route} 
          class={`text-sm font-semibold leading-6 text-gray-900 relative pb-1 ${
            active ? 'border-b-4 border-indigo-600' : ''
          }`}
        >
          {route.name}
        </a>
        )})}
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
      </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="lg:hidden hidden toggleable" role="dialog" aria-modal="true">
      <!-- Background backdrop, show/hide based on slide-over state. -->
      <div class="fixed inset-0 z-50"></div>
      <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
        <div class="flex items-center justify-between">
          <a href="#" class="-m-1.5 p-1.5">
            <span class="sr-only">508.dev</span>
            <img class="h-8 w-auto" src="508logo.png" alt="508 logo">
          </a>
          <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700">
            <span class="sr-only" >Close menu</span>
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
        {routes.map((route)=>{
        const active = isActive(route.route);
        return (
              <a 
                href={route.route} 
                class={`-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50 relative ${
                  active ? 'border-l-4 border-indigo-600 pl-2' : ''
                }`}
              >
                {route.name}
              </a>
        )})}
            </div>
            <div class="py-6">
            </div>
          </div>
        </div>
      </div>
    </div>
</header>
